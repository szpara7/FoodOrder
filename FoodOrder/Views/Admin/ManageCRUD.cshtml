
@{
    ViewBag.Title = "ManageCRUD";
}

<div class="col-lg-12 well well-lg">
    <div class="well well-lg">
        <div class="btn-group">
            @Ajax.ActionLink("Categories", "Index", "CategoryCRUD", null, new AjaxOptions
       {
           UpdateTargetId = "bodyCRUD",
           LoadingElementId = "bodyLoading"
       },
        new { @class = "btn btn-primary" }
   )

            @Ajax.ActionLink("Customers", "Index", "CustomerCRUD", null, new AjaxOptions
       {
           UpdateTargetId = "bodyCRUD",
           LoadingElementId = "bodyLoading"
       },
        new { @class = "btn btn-primary" }
   )

            @Ajax.ActionLink("Employee", "Index", "EmployeeCRUD", null, new AjaxOptions
       {
           UpdateTargetId = "bodyCRUD",
           LoadingElementId = "bodyLoading"
       },
        new { @class = "btn btn-primary" }
   )

            @Ajax.ActionLink("Products", "Index", "ProductCRUD", null, new AjaxOptions
       {
           UpdateTargetId = "bodyCRUD",
           LoadingElementId = "bodyLoading"
       }, new { @class = "btn btn-primary"})
        </div>
    </div>

    <div id="bodyCRUD" class="well well-lg">
        @Html.Action("Index", "CategoryCRUD")
    </div>
    <i id="bodyLoading" class="fa fa-spinner fa-pulse fa-3x fa-fw"  style="display:none; align-content:center"></i>


</div>
