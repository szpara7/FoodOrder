@model List<FoodOrder.ViewModel.Product.ProductsListViewModel>
@using FoodOrder.Infrastructure;
@{
    ViewBag.Title = "ProductsList";
}


<br />
<h2>@ViewBag.ProductCount</h2>
@foreach (var i in Model)
{
    <div class="col-lg-12 well well-sm">

        <div class="col-lg-7">
            <h2>@i.ProductName</h2>
            <h4>Descroption: @i.Description</h4>
        </div>
        <div class="col-lg-3 text-center" style="font-size:xx-large">
            @i.Price
        </div>
        <div class="col-lg-2 btn btn-group-lg top-right">
            <a href="@Url.Action("ProductDetails","Product",new { productId = @i.ProductId})" style="text-align:right" class="top-right">
                <input type="submit" class="btn btn-default btn-lg" value="Show details" />
            </a>
            <br />
            @Ajax.ActionLink("Add to cart","AddtoCart","Cart", new { productId = @i.ProductId }, new AjaxOptions
       {
           UpdateTargetId = "shoppingCart"
       },new {@class = "top-right btn btn-danger btn-lg" })
           
        </div>
    </div>
}
