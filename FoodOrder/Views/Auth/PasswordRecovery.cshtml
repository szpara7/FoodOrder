@model FoodOrder.ViewModel.Auth.PasswordRecoveryViewModel
@{
    ViewBag.Title = "PasswordRecovery";
}

<div class="well well-lg">
    <h3>Please write your e-mail.</h3>
    @using (Html.BeginForm("PasswordRecovery", "Auth"))
    {
        @Html.Label("E-mail")
        @Html.TextBoxFor(t => t.Email,new { @class = "form-control"})
        @Html.ValidationMessageFor(t => t.Email, String.Empty, new { @style = "color:red"})
        <label style="color:red">@TempData["EmailNotExist"]</label>

        <br />
        <input type="submit" class="btn btn-primary" value="Send"/>
    }

</div>

